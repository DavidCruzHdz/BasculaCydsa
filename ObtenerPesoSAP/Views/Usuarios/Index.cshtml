<h2>Usuarios</h2>

<h4>
    @Html.ActionLink("Agregar Nuevo", "Create")
</h4>

<div class="form-horizontal container-fluid col-lg-push-8 img-rounded " style="background-color:#5c87b2">
    <br />
    <div class="panel panel-primary">
        <div class="panel-body" style="background-color:#D6EAF8">

            <table class="table display" style="background-color:#D6EAF8" id="example">

                <thead>
                    <tr>
                        @*<th>
                                @Html.DisplayNameFor(model => model.IdsRol_id)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.CPNombreUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CPCorreo)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.CPPermisosPlantas)
                        </th>
                        @*
                            <th>
                                 @Html.DisplayNameFor(model => model.IdsIdEmpresa)
                             </th>*@
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.IdsRol_id)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.CPNombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPCorreo)
                            </td>
                            @*<td>
                                    @Html.PasswordFor(modelItem => item.IdsPassword)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdsIdEmpresa)
                                </td>*@
                            <td>
                                @*@Html.ActionLink("Plantas", "Permisos", new { id = item.CPIdUsuario }) |*@
                                @Html.ActionLink("Pantallas", "Pantallas", new { id = item.CPIdUsuario }) |
                                @Html.ActionLink("Modificar", "Edit", new { id = item.CPIdUsuario }) |
                                @Html.ActionLink("Borrar", "Delete", new { id = item.CPIdUsuario })
                            </td>
                        </tr>
                    }

                </tbody>

            </table>


        </div>
    </div>

</div>


